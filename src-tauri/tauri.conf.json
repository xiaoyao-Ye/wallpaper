{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "wallpaper",
    "version": "0.0.1"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "allowlist": {
      "os": {
        "all": true
      },
      "dialog": {
        "open": true
      },
      "all": false,
      "path": {
        "all": true
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["**"]
      },
      "shell": {
        "scope": [
          {
            "name": "run-powershell",
            "cmd": "powershell.exe",
            "args": true
          }
        ],
        "all": false,
        "execute": true,
        "open": false
      }
    },
    "windows": [
      {
        "title": "wallpaper",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "bundle": {
      "resources": ["../public/windows-wallpaper-x86-64.exe", "../public/macos-wallpaper"],
      "active": true,
      "targets": "all",
      "identifier": "Ghosteye.wallpaper",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    }
  }
}
